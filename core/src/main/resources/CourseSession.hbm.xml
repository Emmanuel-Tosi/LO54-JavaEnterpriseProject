<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
          
<hibernate-mapping package="com.jnesis.example.hibernate.model">
	<class name="User" table="USERS">
		<id name="idUser" column="user_id">
		    <generator class="identity"/>
		</id>
			
		<property name="id" column="ID" not-null="true" />
                <property name="startDate" column="START_DATE" not-null="true" />
                <property name="endDate" column="END_DATE" not-null="true" />
                <many-to-one name="courseCode" column="COURSE_CODE" not-null="true"/>
                <many-to-one name="locationId" column="LOCATION_ID" not-null="true"/>

	</class>			
</hibernate-mapping>
